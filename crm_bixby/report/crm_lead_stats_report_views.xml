<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="crm_activity_report_view_pivot" model="ir.ui.view">
        <field name="name">crm.lead.stats.report.pivot</field>
        <field name="model">crm.lead.stats.report</field>
        <field name="arch" type="xml">
            <pivot string="Lead Statistics Analysis" disable_linking="True">
                <field name="lead_id" type="row"/>
                <field name="move_count" type="measure"/>
                <field name="lead_age" type="measure"/>
            </pivot>
        </field>
    </record>
    <record id="crm_stage_analysis_view_pivot" model="ir.ui.view">
        <field name="name">crm.stage.analysis.pivot</field>
        <field name="model">crm.stage.report</field>
        <field name="arch" type="xml">
            <pivot string="Crm Stage Analysis" disable_linking="True">
                <field name="stage_id" type="row"/>
                <field name="lead_count" type="measure"/>
                <field name="lead_in_count" type="measure"/>
                <field name="lead_out_count" type="measure"/>
                <field name="perc" type="measure"/>
            </pivot>
        </field>
    </record>
    <record id="crm_lead_stats_report_action" model="ir.actions.act_window">
        <field name="name">Lead Statistics Analysis</field>
        <field name="res_model">crm.lead.stats.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">pivot</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
    </record>
    <record id="crm_stage_analysis_action" model="ir.actions.act_window">
        <field name="name">CRM Stage Analysis</field>
        <field name="res_model">crm.stage.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">pivot</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
    </record>
    <menuitem
        id="crm_lead_stats_report_menu"
        name="Lead Statistics Report"
        parent="crm.crm_menu_report"
        action="crm_lead_stats_report_action"
        sequence="7"/>
    <menuitem
        id="crm_stage_analysis_menu"
        name="Crm Stage Analysis"
        parent="crm.crm_menu_report"
        action="crm_stage_analysis_action"
        sequence="8"/>
</odoo>