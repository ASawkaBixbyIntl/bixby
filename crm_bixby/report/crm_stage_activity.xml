<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="crm_stage_activity_analysis_view_pivot" model="ir.ui.view">
        <field name="name">crm.stage.activity</field>
        <field name="model">crm.stage.activity</field>
        <field name="arch" type="xml">
            <pivot string="Crm Stage Analysis" disable_linking="True">
                <field name="stage_id" type="col"/>
                <field name='lead_id' type="row"/>
                <field name="stage_change_age" type="measure"/>
            </pivot>
        </field>
    </record>
    <record id="crm_lead_activity_stats_report_action" model="ir.actions.act_window">
        <field name="name">Lead Statistics Analysis</field>
        <field name="res_model">crm.stage.activity</field>
        <field name="view_type">form</field>
        <field name="view_mode">pivot</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
    </record>
    <menuitem
        id="crm_lead_stage_act_report_menu"
        name="Stage Activities"
        parent="crm.crm_menu_report"
        action="crm_lead_activity_stats_report_action"
        sequence="9"/>
</odoo>